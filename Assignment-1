#include<iostream>
using namespace std;
class count{
    public:
    int countZeros(int n, int arr[])
    {
        int low = 0, high=(n-1);
        while(low<=high)
        {
            int mid = (high+low)/2;
            if(arr[mid]==0)
            {
                high = mid-1;
            }
            else
            {
                low = mid+1;
            }
        }
        return (n-low);
    }
};
int main()
{
    count c;
    int n;
    cout<<"enter size of array "<<endl;
    cin>>n;
    int arr[n];
    cout<<"enter array elements : "<<endl;
    for(int i=0;i<n;i++)
    {
        int prevEle = 1;
        cin>>arr[i];

        //check no. should only 0 and 1
        if(arr[i]!=0 && arr[i]!=1)
        {
            cout<<"invalid input"<<endl;
            return 0;
        }
        //check after 1 their should be always 0
        if(arr[i]>prevEle)
        {
            cout<<"invalid input"<<endl;
            return 0;
        }
        //in array at least one 1 and one 0
        if(arr[0]!=1 && arr[n-1]!=0)
        {
            cout<<"invalid input"<<endl;
            return 0;
        }
    }

    int a = c.countZeros(n, arr);
    cout<<"number of zeros : "<<a;

}
